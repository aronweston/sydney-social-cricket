<head>
    <title> Login | Syd Cricket </title>
</head>

<div class="container center full-height">
  
  <div class="sign-up">
    <h1>Login</h1>
    <% if flash[:error].present? %>
        <p class="error">
            <%= flash[:error] %>
        </p>
    <% end %>

    <%= form_tag login_path do %>

        <%= label_tag(:email, nil, :hidden => true)%>
        <%= email_field_tag(:email,nil,:placeholder => "Email Address")%>

        <%= label_tag(:password, nil, :hidden => true) %>
        <%= password_field_tag(:password, nil, :placeholder => "Password")%>

        <%= submit_tag "Login", :class => "u-full-width" %>

    <% end %>

    <%= button_to "/auth/google_oauth2", :id => "google-btn", :class => " button grey" do %> 
      <i id="g-icon" class="fa fa-google"></i>
    <% end %>
  </div>
</div>

<div class="wicket">
  <%= image_tag "wicket.svg" %>
</div>