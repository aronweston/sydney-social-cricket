<h1>Almost there</h1>

<%= form_for @team, url: team_update_profile_path(@team) do |f| %>

  <%= f.label :name, "Team Name", :autofocus => true, :required => true %>
  <%= f.text_field :name %>
  
  <%= f.label :grade %>
  <%= f.select(:grade, ["A", "B", "C", "D"], :include_blank => true, :required => true)%>

  <%= f.label :suburb %>
  <%= f.number_field :suburb, :placeholder => "ie. 2066", :max => 5000, :min => 0 %>
  
  <%= f.label :bio %>
  <%= f.text_area(:bio, :cols => 10, :rows => 10) %>
  
  <%= f.label :profile, "Team Photo" %>
  <%= f.file_field :profile %>

  <%= f.label :banner, "Banner Photo" %>
  <%= f.file_field :banner %>

  <%= f.submit("Register") %>

<% end %>